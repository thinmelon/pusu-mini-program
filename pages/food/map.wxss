/* pages/food/map.wxss */

.restaurants-map {
    width: 100%;
    height: 80vh;
}

.container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.info {
    width: 77%;
    height: 38vh;
    background-color: #fafafa;
    border-color: #888;
    border-radius: 5px;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
}

.restaurant-name {
    padding: 1rem;
}

/*  微信公众号文章列表  */

.article {
    padding: 7px;
    width: 95%;
}

.article .title {
    font-size: 10pt;
    color: blue;
    text-decoration: underline;
    padding: 3px 0;
}

.article .source {
    font-size: 9pt;
    color: #888;
}

/*  选项卡  */

.list {
    position: fixed;
    top: 17px;
    right: 7px;
    opacity: 0.5;
}

.list image {
    width: 24px;
    height: 24px;
}
