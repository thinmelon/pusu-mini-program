/* pages/food/map.wxss */

.restaurants-map {
  width: 100%;
  height: 85vh;
}

.tags {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 15vh;
  display: grid;
  grid-template-columns: repeat(4, 25%);
  grid-row-gap: 3px;
  justify-content: center;
  align-items: center;
  padding: 7px 0;
  background-color: white;
}

.tag {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  /* background-color: #EEE; */
  margin: 0 3px;
  border-radius: 5px;
}

.tag image {
  width: 25px;
  height: 25px;
  padding: 7px 5px;
}

.tag text {
  font-size: 1rem;
  color: gray;
}
