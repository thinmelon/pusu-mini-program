<!--pages/food/map.wxml-->
<map class="restaurants-map" longitude="{{centerLongitude}}" latitude="{{centerLatitude}}" scale="{{scale}}" markers="{{markers}}" bindmarkertap="bindMarkerTap">
    <cover-view class='container' wx:if="{{ chosenMarker.attach }}" bindtap='closeCoverView'>
        <cover-view class='info'>
            <!-- <cover-view class='restaurant-name'>{{ chosenMarker.attach.name }}</cover-view> -->
            <cover-view class="article" catchtap='catchTapArticle' data-article='{{ item }}' wx:for="{{ chosenMarker.attach.articles }}" wx:key="{{ item.title }}" wx:for-index="idx">
                <cover-image src='{{item.thumbnail}}' wx:if="{{item.thumbnail && idx === 0 }}" mode='aspectFit'></cover-image>
                <cover-view class='title'>{{item.title}}</cover-view>
                <cover-view class='source'>来源：{{item.source}}</cover-view>
            </cover-view>
        </cover-view>
    </cover-view>
</map>
<view class='bar'>
    <view class='tag' style="background-color: {{ item.enable ? '#FAFAFA' : '#FFF' }};" wx:for="{{displayedTags}}" wx:key="{{item.name}}" data-name='{{item.name}}' bindtap='onTagClicked'>
        <image src='{{ item.enable ? item.icon : item.disabledIcon }}'></image>
        <text>{{item.name}}</text>
    </view>
</view>