<!--pages/food/list.wxml-->
<view wx:for="{{restaurants}}" wx:key="{{item._id}}" class='restaurant'>
    <view class='restaurant-basic'>
        <text class='restaurant-name'>{{item.name}}</text>
        <text>人均：{{item.consumptionPerPerson}}</text>
        <text>地址：</text>
        <text>{{item.address}}</text>
        <text>营业时间：</text>
        <text>{{item.open}}</text>
        <text>电话：</text>
        <text>{{item.phone}}</text>
        <text>标签</text>
        <view>
            <block wx:for="{{item.tags}}" wx:for-item="tag" wx:key="*this">
                <button size='mini'>{{tag}}</button>
            </block>
        </view>
    </view>
    <picker bindchange="bindPickerChange" data-restaurantid='{{item._id}}' range="{{tags}}">
        <view class="picker">
            添加标签
        </view>
    </picker>
    <view wx:for="{{item.articles}}" wx:for-item="article" wx:key="{{article.title}}" class='restaurant-article' data-url='{{ article.url }}' catchtap='catchTapArticle'>
        <text>{{article.title}}</text>
    </view>
    <view class='div-line'></view>
</view>