/* pages/food/list.wxss */

.restaurants {
    width: 100%;
    height: 80vh;
}

.restaurant {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    text-align: center;
}

.restaurant-location {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.restaurant-location image {
    width: 24px;
    height: 24px;
}

.restaurant-location text {
    font-size: 9pt;
    color: #888;
}

.restaurant-basic {
    display: grid;
    grid-template-columns: 30% 70%;
    grid-column-gap: 3px;
    padding: 7px;
    font-size: 11pt;
}

.restaurant-name {
    padding: 7px 0;
    font-size: 13pt;
    color: brown;
}

.restaurant-article {
    padding: 7px;
    font-size: 10pt;
}

.restaurant-article-title {
    text-decoration: underline;
    color: blue;
}

.restaurant-article-source, .restaurant-article-publish {
    padding: 0 17px;
    color: #888;
}

.picker {
    font-size: 11pt;
    color: blueviolet;
}
