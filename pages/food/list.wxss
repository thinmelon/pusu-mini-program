/* pages/food/list.wxss */

.restaurants {
    width: 100%;
    height: 80vh;
}

.restaurant-basic {
    display: grid;
    grid-template-columns: 30% 70%;
    grid-column-gap: 3px;
    padding: 7px;
    font-size: 11pt;
}

.restaurant-name {
    padding: 0 3px;
    font-size: 13pt;
    color: brown;
}

.restaurant-article {
    padding: 7px;
    font-size: 10pt;
}

.restaurant-article-title {
    text-decoration: underline;
    color: blue;
}

.restaurant-article-source {
    padding: 0 37px;
    color: #888;
}

.picker {
    font-size: 11pt;
    color: blueviolet;
}
