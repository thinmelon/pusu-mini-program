<!--pages/stock/annoucement.wxml-->
<block wx:for="{{displayedTags}}" wx:key="{{item.name}}" wx:for-item="tag">
    <scroll-view scroll-y enable-back-to-top class='pannel' wx:if="{{(tag.name === '公告') && tag.enable}}">
        <text>近一月公告</text>
        <view class='section' wx:for="{{announcements}}" wx:key="{{item.RECID}}" data-url='{{item.F003V}}' bindtap='onAnnouncementClicked'>
            <text class='title'>{{item.F002V}}</text>
            <text class='date'>{{item.F001D}}</text>
        </view>
    </scroll-view>

    <scroll-view scroll-y enable-back-to-top class='pannel' wx:if="{{(tag.name === '分红') && tag.enable}}">
        <text>历史分红</text>
        <view class='section' wx:for="{{dividends}}" wx:key="{{item.F002D}}">

            <text class='date'>{{item.F002D}}</text>
            <view class='field'>
                <text>董事会预案分红说明</text>
                <text>{{item.F003V}}</text>
            </view>
            <view class='field' wx:if="{{item.F008N}}">
                <text>分配股本基数（实施）</text>
                <text>{{item.F008N}}万股</text>
            </view>
            <view class='field' wx:if="{{item.F010N}}">
                <text>送股比例</text>
                <text>每10股送{{item.F010N}}股</text>
            </view>
            <view class='field' wx:if="{{item.F011N}}">
                <text>转增比例</text>
                <text>每10股转增{{item.F011N}}股</text>
            </view>
            <view class='field' wx:if="{{item.F012N}}">
                <text>派息比例（人民币）</text>
                <text>每10股派{{item.F012N}}元</text>
            </view>
            <view class='field' wx:if="{{item.F015N}}">
                <text>送股数量</text>
                <text>{{item.F015N}}万股</text>
            </view>
            <view class='field' wx:if="{{item.F016N}}">
                <text>转增数量</text>
                <text>{{item.F016N}}万股</text>
            </view>
            <view class='field' wx:if="{{item.F017N}}">
                <text>派息金额(人民币)</text>
                <text>{{item.F017N}}万元</text>
            </view>
            <view class='field' wx:if="{{item.F018D}}">
                <text>A股股权登记日</text>
                <text>{{item.F018D}}</text>
            </view>
            <view class='field' wx:if="{{item.F020D}}">
                <text>A股除权日</text>
                <text>{{item.F020D}}</text>
            </view>
            <view class='field' wx:if="{{item.F023D}}">
                <text>派息日(A)</text>
                <text>{{item.F023D}}</text>
            </view>
            <view class='field' wx:if="{{item.F025D}}">
                <text>A股送红股到帐日</text>
                <text>{{item.F025D}}</text>
            </view>
            <view class='field' wx:if="{{item.F026D}}">
                <text>A股新增股份上市日</text>
                <text>{{item.F026D}}</text>
            </view>
            <view class='field' wx:if="{{item.F028N}}">
                <text>送转前总股本</text>
                <text>{{item.F028N}}万股</text>
            </view>
            <view class='field' wx:if="{{item.F029N}}">
                <text>送转后总股本</text>
                <text>{{item.F029N}}万股</text>
            </view>
            <view class='field' wx:if="{{item.F030N}}">
                <text>送转前流通股本</text>
                <text>{{item.F030N}}万股</text>
            </view>
            <view class='field' wx:if="{{item.F031N}}">
                <text>送转后流通股本</text>
                <text>{{item.F031N}}万股</text>
            </view>
            <view class='field' wx:if="{{item.F038D}}">
                <text>A股转赠股份到帐日</text>
                <text>{{item.F038D}}万股</text>
            </view>
            <view class='div-line'></view>
        </view>
    </scroll-view>

    <scroll-view scroll-y enable-back-to-top class='pannel' wx:if="{{(tag.name === '增发') && tag.enable}}">
        <text>历史记录</text>
        <view class='section' wx:for="{{spo}}" wx:key="{{item.DECLAREDATE}}">

            <text class='date'>{{item.DECLAREDATE}}</text>
            <view class='field' wx:if="{{item.F004N}}">
                <text>总发行数量</text>
                <text>{{item.F004N}}万股</text>
            </view>
            <view class='field' wx:if="{{item.F005N}}">
                <text>公开发行数量</text>
                <text>{{item.F005N}}万股</text>
            </view>
            <view class='field' wx:if="{{item.F008N}}">
                <text>每股面值</text>
                <text>{{item.F008N}}</text>
            </view>
            <view class='field' wx:if="{{item.F009N}}">
                <text>发行价格（人民币）</text>
                <text>{{item.F009N}}元</text>
            </view>
            <view class='field' wx:if="{{item.F013N}}">
                <text>竞价上限</text>
                <text>{{item.F013N}}元</text>
            </view>
            <view class='field' wx:if="{{item.F014N}}">
                <text>竞价下限</text>
                <text>{{item.F014N}}元</text>
            </view>
            <view class='field' wx:if="{{item.F015V}}">
                <text>发行定价方式</text>
                <text>{{item.F015V}}</text>
            </view>
            <view class='field' wx:if="{{item.F016V}}">
                <text>老股东配售方式</text>
                <text>{{item.F016V}}</text>
            </view>
            <view class='field' wx:if="{{item.F017N}}">
                <text>老股东配售价格</text>
                <text>{{item.F017N}}元</text>
            </view>
            <view class='field' wx:if="{{item.F018N}}">
                <text>老股东配售比例</text>
                <text>每10股配{{item.F018N}}股</text>
            </view>
            <view class='field' wx:if="{{item.F021N}}">
                <text>发行前每股净资产</text>
                <text>{{item.F021N}}元</text>
            </view>
            <view class='field' wx:if="{{item.F022N}}">
                <text>发行后每股净资产</text>
                <text>{{item.F022N}}元</text>
            </view>
            <view class='field' wx:if="{{item.F023N}}">
                <text>预计募资金额</text>
                <text>{{item.F023N}}万元</text>
            </view>
            <view class='field' wx:if="{{item.F024N}}">
                <text>实际募资总额</text>
                <text>{{item.F024N}}万元</text>
            </view>
            <view class='field' wx:if="{{item.F120N}}">
                <text>其中现金</text>
                <text>{{item.F120N}}</text>
            </view>
            <view class='field' wx:if="{{item.F027N}}">
                <text>发行费用总额</text>
                <text>{{item.F027N}}万元</text>
            </view>
            <view class='field' wx:if="{{item.F028N}}">
                <text>承销费用</text>
                <text>{{item.F028N}}万元</text>
            </view>
            <view class='field' wx:if="{{item.F036C}}">
                <text>是否除权</text>
                <text>{{item.F036C}}</text>
            </view>
            <view class='field' wx:if="{{item.F037D}}">
                <text>股权登记日</text>
                <text>{{item.F037D}}</text>
            </view>
            <view class='field' wx:if="{{item.F038D}}">
                <text>除权日</text>
                <text>{{item.F038D}}</text>
            </view>
            <view class='field' wx:if="{{item.F076D}}">
                <text>上市公告日期</text>
                <text>{{item.F076D}}</text>
            </view>
            <view class='field' wx:if="{{item.F077D}}">
                <text>增发股上市日</text>
                <text>{{item.F077D}}</text>
            </view>
            <view class='field' wx:if="{{item.F078D}}">
                <text>资金到帐日</text>
                <text>{{item.F078D}}</text>
            </view>
            <view class='field' wx:if="{{item.F090N}}">
                <text>预计发行股数</text>
                <text>{{item.F090N}}</text>
            </view>
            <view class='div-line'></view>
        </view>
    </scroll-view>
</block>

<view class='bar'>
    <view class='tag' style="background-color: {{ item.enable ? '#FAFAFA' : '#FFF' }};" wx:for="{{displayedTags}}" wx:key="{{item.name}}" data-name='{{item.name}}' bindtap='onTagClicked'>
        <image src='{{ item.enable ? item.icon : item.disabledIcon }}'></image>
        <text>{{item.name}}</text>
    </view>
</view>