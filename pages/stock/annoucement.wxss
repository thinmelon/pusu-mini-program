/* pages/stock/annoucement.wxss */

.pannel {
    width: 100%;
    height: 80vh;
    padding: 0 7px;
}

.section {
    padding: 7px 17px;
}

.pannel, .section {
    display: flex;
    flex-direction: column;
}

.title {
    font-size: 9pt;
    color: blue;
    text-decoration: underline;
}

.date {
    font-size: 9pt;
    color: grey;
}

.field {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    font-size: 9pt;
}
