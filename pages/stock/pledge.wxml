            </view>
            <view class='field' wx:if="{{item.F012N}}">
                <text>质押解除数量</text>
                <text>{{item.F012N}}</text>
            </view>
            <view class='field' wx:if="{{item.F011D}}">
                <text>质押解除日</text>
                <text>{{item.F011D}}</text>
            </view>
            <view class='field-column' wx:if="{{item.F008V}}">
                <text>质押原因：</text>
                <text>{{item.F008V}}</text>
            </view>
            <view class='div-line'></view>
        </view>
    </scroll-view>

    <scroll-view scroll-y enable-back-to-top class='pannel' wx:if="{{(tag.name === '冻结') && tag.enable}}">
        <text>历史股份冻结</text>
        <view class='section' wx:for="{{freeze}}" wx:key="{{item.DECLAREDATE}}">
            <text class='date'>{{item.DECLAREDATE}}</text>
            <view class='field' wx:if="{{item.F002V}}">
                <text>被冻结当事人</text>
                <text>{{item.F002V}}</text>
            </view>
            <view class='field' wx:if="{{item.F004V}}">
                <text>被冻结股份性质</text>
                <text>{{item.F004V}}</text>
