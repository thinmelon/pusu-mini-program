        </view>

        <text>增（减）持情况</text>
        <view class='section' wx:for="{{date}}" wx:key="{{item.DECLAREDATE}}">
            <text class='date'>{{item.varydate}}</text>
            <view class='field' wx:if="{{item.F001C}}">
                <text>增（减）持类型</text>
                <text>{{item.F001C === 'B' ? '增持' : '减持'}}</text>
            </view>
            <view class='field' wx:if="{{item.F002V}}">
                <text>股东名称</text>
                <text>{{item.F002V}}</text>
            </view>
            <view class='field' wx:if="{{item.F004N}}">
                <text>变动数量</text>
