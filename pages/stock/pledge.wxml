        <text>高管持股变动</text>
        <view class='section' wx:for="{{manager}}" wx:key="{{item.DECLAREDATE}}">
            <text class='date'>{{item.DECLAREDATE}}</text>
            <view class='field' wx:if="{{item.ENDDATE}}">
                <text>截止日期</text>
                <text>{{item.ENDDATE}}</text>
            </view>
            <view class='field' wx:if="{{item.HUMANNAME}}">
                <text>变动人</text>
                <text>{{item.HUMANNAME}}</text>
            </view>
            <view class='field' wx:if="{{item.F001V}}">
                <text>董监高姓名</text>
