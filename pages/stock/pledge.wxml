            </view>
            <view class='field' wx:if="{{item.F014N}}">
                <text>其他流通受限股份</text>
                <text>{{item.F014N}}万股</text>
            </view>
            <view class='field' wx:if="{{item.F015N}}">
                <text>优先股</text>
                <text>{{item.F015N}}万股</text>
            </view>
            <view class='field' wx:if="{{item.F016N}}">
                <text>其他未流通股</text>
                <text>{{item.F016N}}万股</text>
            </view>
            <view class='field' wx:if="{{item.F021N}}">
