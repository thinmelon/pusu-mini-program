            <view class='field' wx:if="{{item.F005N}}">
                <text>冻结数量</text>
                <text>{{item.F005N}}股</text>
            </view>
            <view class='field' wx:if="{{item.F006N}}">
                <text>占总股份比例</text>
                <text>{{item.F006N}}%</text>
            </view>
            <view class='field' wx:if="{{item.F007V}}">
                <text>冻结申请人</text>
                <text>{{item.F007V}}</text>
            </view>
            <view class='field' wx:if="{{item.F008V}}">
                <text>冻结执行人</text>
                <text>{{item.F008V}}</text>
            </view>
            <view class='field' wx:if="{{item.F010D}}">
                <text>冻结起始日</text>
                <text>{{item.F010D}}</text>
            </view>
            <view class='field' wx:if="{{item.F011D}}">
                <text>冻结终止日</text>
                <text>{{item.F011D}}</text>
            </view>
            <view class='field' wx:if="{{item.F012D}}">
                <text>解冻日期</text>
                <text>{{item.F012D}}</text>
            </view>
            <view class='field' wx:if="{{item.F013N}}">
                <text>累计解冻数量</text>
                <text>{{item.F013N}}股</text>
            </view>
            <view class='field-column' wx:if="{{item.F009V}}">
                <text>冻结事项</text>
                <text>{{item.F009V}}</text>
            </view>
            <view class='field-column' wx:if="{{item.F014V}}">
