            <text class='date'>{{item.ENDDATE}}</text>
            <view class='field' wx:if="{{item.F001N}}">
                <text>股东名次</text>
                <text>{{item.F001N}}</text>
            </view>
            <view class='field' wx:if="{{item.F003V}}">
                <text>股东名称</text>
                <text>{{item.F003V}}</text>
