            <text class='date'>{{item.VARYDATE}}</text>
            <view class='field' wx:if="{{item.F002V}}">
                <text>变动原因</text>
                <text>{{item.F002V}}</text>
            </view>
            <view class='field' wx:if="{{item.F003N}}">
                <text>总股本</text>
                <text>{{item.F003N}}万股</text>
            </view>
            <view class='field' wx:if="{{item.F004N}}">
                <text>未流通股份</text>
                <text>{{item.F004N}}万股</text>
            </view>
            <view class='field' wx:if="{{item.F005N}}">
                <text>发起人股份</text>
                <text>{{item.F005N}}万股</text>
            </view>
            <view class='field' wx:if="{{item.F006N}}">
                <text>国家持股</text>
                <text>{{item.F006N}}万股</text>
            </view>
            <view class='field' wx:if="{{item.F007N}}">
